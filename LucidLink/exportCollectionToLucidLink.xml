<workflow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://levelsbeyond.com/schema/workflow"
	xmlns:nimbus="http://levelsbeyond.com/schema/workflow/nimbus"
	xsi:schemaLocation="http://levelsbeyond.com/schema/latest http://levelsbeyond.com/schema/latest/studio.xsd"
	id="exportCollectionToLucidLink"
	name="Export Collection"
	executionLabelExpression="Lucid Link - Export Collection - ${subject}"
	subjectDOClassName="AssetCollection"
	adminOnly="true"
	group="Lucid Link"
	showInUserInterface="true"
	sdkVersion=""
>

	<initialStepName>is workflow executing</initialStepName>
	
	
	<queryStep name="is workflow executing"
		targetDataObjectClass="WorkflowExecution"
		resultDataDef="currentExecutions"
		executionLabelExpression="Check to see if this workflow is currently executing"
	>
		<transition condition="${currentExecutions.size() == 0}">
			<targetStepName>export items to lucid link</targetStepName>
		</transition>
		<transition condition="true">
			<targetStepName>workflow is running</targetStepName>
		</transition>
		
		<criteria>
			<![CDATA[
                <criteria>
                    <and>
                        <condition property="workflowVersion.workflow.key" op="eq">
                            <test value="${ #this.workflow.workflowVersion.workflow.key }" />
                        </condition>
                        <condition property="uuid" op="noteq">
                            <test value="${ #this.workflow.uuid }" />
                        </condition>
                        <condition property="executionLabel" op="eq">
                            <test value="${T(org.apache.commons.lang.StringEscapeUtils).escapeXml(#this.workflow.executionLabel)}"/>
                        </condition>
                        <condition property="status" op="in">
                            <tests>
                                <test value="CREATED" />
                                <test value="QUEUED" />
                                <test value="EXECUTING" />
                            </tests>
                        </condition>
                    </and>
                </criteria>
            ]]>
		</criteria>
	</queryStep>
 
	<!-- todo: add `scheduled=true` to this executeSubflowStep -->
	<executeSubflowStep name="export items to lucid link"
	    targetWorkflowId="exportToLucidLink"
	    subflowExecutionLimitExpression="${subflowExecutionLimit}"
	    subjectChangePath="${collection.assetItems.![asset].?[#this.getClass().getName().endsWith('VideoClip') or #this.getClass().getName().endsWith('AssetMaster')]}"
	    nextStep="end">
		<subflowContextDataMapping parentDataDef="format" subflowDataDef="format"/>
		<subflowContextDataMapping parentDataDef="fallBackToSource" subflowDataDef="fallBackToSource"/>
	</executeSubflowStep>
    <!-- ................................................... End Steps .................................................... -->
	<!-- success -->
	<noopStep name="end"/>
	
	
	<!-- fail -->
	<failWorkflowStep name="workflow is running"
		executionLabelExpression="Workflow already executing"
		reasonExpression="Workflow already executing"
	/>
	
	
	<!-- ................................................... Data Defs .................................................... -->
	<!-- ............ INPUT ............. -->
	<contextDataDef name="collection" dataType="Data Object" defaultDataExpression="${subject}" />
	<contextDataDef name="format"       dataType="String"   userInput="true"    label="Choose File to Send:"    defaultDataExpression="proxy" displayIndex="100">
		<picklist>
			<picklistItem value="source" label="Source"/>
			<picklistItem value="mezzanine" label="Mezzanine"/>
			<picklistItem value="proxy" label="Proxy"/>
		</picklist>
	</contextDataDef>
	
	<contextDataDef name="fallBackToSource" dataType="Boolean" userInput="false"    label="Fall back to source if missing asset content:"  defaultDataExpression="true" displayIndex="200" />
	
	<!-- ......... PROCESSING ........... -->
	<contextDataDef name="currentExecutions" dataType="Data Object" multiple="true"/>
	<contextDataDef name="subflowExecutionLimit" dataType="Integer" defaultDataExpression="${#sysconfig('lucidLink.maxFileExecutions') ?: 10}"/>
 
 
</workflow>
