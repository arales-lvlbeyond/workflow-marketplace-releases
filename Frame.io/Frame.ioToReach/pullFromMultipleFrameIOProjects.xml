<workflow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://levelsbeyond.com/schema/workflow"
    xmlns:nimbus="http://levelsbeyond.com/schema/workflow/nimbus"
    xsi:schemaLocation="http://levelsbeyond.com/schema/workflow http://www.levelsbeyond.com/schema/latest/studio.xsd"
    id="pullFromMultipleFrameIOProjects"
    name="Pull Assets from Specified Frame.io Projects"
    executionLabelExpression="Pull Assets from Specified Frame.io Projects"
    description="This WF will pull assets from all rootAssetIds specified in the property 'workflows.pullFromFrameIO.rootAssetIds'
           Once assets have been acquired from Frame.io they will be removed from the project."
    adminOnly="true"
    showInUserInterface="true"
    group="Frame.io"
    subjectDOClassName=""
    subjectQualifierExpression=""
    sdkVersion=""
    >

    <initialStepName>process all rootAssetIds</initialStepName>


    <executeSubflowStep name="process all rootAssetIds"
                        targetWorkflowId="pullFromFrameIO"
                        subjectChangePath="${rootAssetIDs}"
                        subflowTargetDataDef="rootAssetID"
                        waitForCompletionExpression="false"
                        nextStep="end"/>

    <noopStep name="end"/>

    <contextDataDef name="rootAssetIDs"         dataType="String"       multiple="true"     defaultDataExpression="${#sysconfig('workflows.pullFromFrameIO.rootAssetIds')}" />
    
</workflow>