<workflow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="http://levelsbeyond.com/schema/workflow"
		xmlns:nimbus="http://levelsbeyond.com/schema/workflow/nimbus"
		xsi:schemaLocation="http://levelsbeyond.com/schema/latest https://s3-us-west-2.amazonaws.com/schema.levelsbeyond.com/2.3.16.17962/studio.xsd"
		id="sendEmail"
		name="Send via Email"
		executionLabelExpression="Send via Email | ${asset.name}"
		subjectDOClassName="AssetMaster"
		showInUserInterface="true"
		sdkVersion=""
>
	
	<initialStepName>send email</initialStepName>
	

	<emailStep name="send email"
			executionLabelExpression="Sending email to ${userEmailsToAdd}"
			emailAddressesExpression="${userEmailsToAdd}"
			subjectExpression="${asset.name} has been shared with you!"
			nextStep="end">
		<body>
			<![CDATA[
Hello,
The asset ${asset.name} has been shared with you by ${currentUserName}.

Comment: ${message}
Link to Asset: ${linkToAsset}

Sincerely,
Reach Engine System
		]]>
		</body>
	</emailStep>
	
	
	<!-- ................................................... End Steps .................................................... -->
	<!-- success -->
	<noopStep name="end"/>
	
	
	<!-- ................................................... Data Defs .................................................... -->
	<!-- ............ INPUT ............. -->
	<contextDataDef name="userEmailsToAdd" dataType="Email" userInput="true" required="true" multiple="true" displayIndex="1" />
	<contextDataDef name="message" dataType="String" userInput="true" required="false" displayIndex="2" />
	
	<!-- ......... PROCESSING ........... -->
	<contextDataDef name="asset" dataType="Data Object" defaultDataExpression="${subject}" />
	<contextDataDef name="reachUrl" dataType="String" defaultDataExpression="${#sysconfig('reachengine.url')}" />
	<contextDataDef name="currentUserName" dataType="String" defaultDataExpression="${#this.startedBy?.userName}" />
	<contextDataDef name="linkToAsset" dataType="String" defaultDataExpression="${reachUrl}/#/assets/${#mediaType(asset).toLowerCase()}/${asset.id}" />
	
</workflow>
