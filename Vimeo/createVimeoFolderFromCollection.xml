<workflow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://levelsbeyond.com/schema/workflow"
	xmlns:nimbus="http://levelsbeyond.com/schema/workflow/nimbus"
	xsi:schemaLocation="http://levelsbeyond.com/schema/latest http://schema.levelsbeyond.com/latest/studio.xsd"
	id="createVimeoFolderFromCollection"
	name="Create Vimeo Folder From Collection"
	executionLabelExpression="Create Vimeo Folder From Collection: ${folderName}"
	subjectDOClassName="AssetCollection"
	showInUserInterface="true"
	resultDataDef="vimeoProjectId"
	sdkVersion=""
>
	
	<initialStepName>create vimeo project folder</initialStepName>
	
	<executeSubflowStep name="create vimeo project folder" 
		targetWorkflowId="createVimeoFolder"
		executionLabelExpression="Creating Vimeo Folder from Collection ${folderName}"
		resultDataDef="vimeoProjectInfo" >
		<transition condition="${vimeoProjectInfo != null}">
			<targetStepName>save collection metadata</targetStepName>
		</transition>
		<transition condition="${true}">
			<targetStepName>http error</targetStepName>
		</transition>
		<subflowContextDataMapping parentDataDef="folderName" subflowDataDef="folderName" />
	</executeSubflowStep>
	
	
	<saveDataObjectStep name="save collection metadata"
		executionLabelExpression="saving metadata to ${projectTitle}"
		dataObjectExpression="${subject.metadata}"
		pctComplete="100"
		nextStep="end" >
		<property name="vimeoProjectLink">${vimeoProjectInfo.vimeoProjectLink}</property>
		<property name="vimeoProjectId">${vimeoProjectInfo.vimeoProjectId}</property>
	</saveDataObjectStep>
	
	<!-- ................................................... End Steps .................................................... -->
	<!-- success -->
	<noopStep name="end"/>
	
	<createFailureNotificationStep name="http error"
		notificationTypeExpression="error"
		notificationBodyExpression="Could not send to Vimeo. HTTP Error code ${vimeoResponseCode}"/>
	<!-- ................................................... Data Defs .................................................... -->
	<!-- ............ INPUT ............. -->
	
	<!-- ......... PROCESSING ........... -->
	<contextDataDef name="folderName"       dataType="String"   defaultDataExpression="${subject.name}" />
	<contextDataDef name="vimeoAccessToken" dataType="String" defaultDataExpression="${#sysconfig('vimeo.access.token') ?: '0777ce3bcd3596dcfc63d76e6a566589'}" hidden="true"/>
	<contextDataDef name="vimeoResponseBody" dataType="JSON"/>
	<contextDataDef name="vimeoResponseCode" dataType="String"/>
	<contextDataDef name="vimeoProjectInfo" dataType="JSON"   />

</workflow>