<workflow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://levelsbeyond.com/schema/workflow"
	xmlns:nimbus="http://levelsbeyond.com/schema/workflow/nimbus"
	xsi:schemaLocation="http://levelsbeyond.com/schema/latest http://www.levelsbeyond.com/schema/latest/studio.xsd"
	id="copyFile"
	name="Copy File"
	executionLabelExpression="Copy File"
	subjectDOClassName=""
	showInUserInterface="false"
	sdkVersion=""
	resultDataDef="resultFile"
>
	
	<initialStepName>copy file</initialStepName>
	
	
	<copyFileStep name="copy file"
		sourceFileExpression="${fileToCopy.file}"
		targetDirectoryExpression="${targetDir}"
		resultDataDef="resultFile"
		nextStep="end" />
	
	
	
	<!-- ................................................... End Steps .................................................... -->
	
	<!-- success -->
	<noopStep name="end"/>
	
	<!-- .................................................. Context Data Defs .................................................. -->
	<!-- Input -->
	<contextDataDef name="fileToCopy"       dataType="Data Object"     defaultDataExpression="${subject}"/>
	<contextDataDef name="targetDir"        dataType="String"   />
	<contextDataDef name="resultFile"       dataType="File"     />
</workflow>